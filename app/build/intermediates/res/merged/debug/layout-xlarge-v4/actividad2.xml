<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/muestraDatos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="75dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20sp" />

    <Button
        android:id="@+id/hacerOtraReservacion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="hacerOtraReserva"
        android:text="Hacer Otra Reservacion"
        android:layout_marginBottom="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="¿Cuántas veces haz visitado nuestras instalaciones?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Barra2"
        android:layout_above="@+id/Barra2"
        android:layout_toRightOf="@+id/muestraDatos" />

    <TextView
        android:text="Ingresa tu número telefonico:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_above="@+id/Télefono"
        android:layout_toRightOf="@+id/muestraDatos" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Barra2"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/textView"
        android:layout_toRightOf="@+id/muestraDatos" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Télefono"
        android:ems="10"
        android:id="@+id/Télefono"
        android:layout_marginBottom="21dp"
        android:layout_above="@+id/edad"
        android:layout_toRightOf="@+id/muestraDatos" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Correo Eléctronico"
        android:ems="15"
        android:id="@+id/Email"
        android:layout_above="@+id/hacerOtraReservacion"
        android:layout_alignParentRight="true" />

    <RadioButton
        android:text="Malos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Malos"
        android:layout_alignBaseline="@+id/Email"
        android:layout_alignBottom="@+id/Email"
        android:layout_alignRight="@+id/textView2" />

    <RadioButton
        android:text="Buenos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Buenos"
        android:layout_alignBaseline="@+id/Malos"
        android:layout_alignBottom="@+id/Malos"
        android:layout_toRightOf="@+id/textView" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Edad"
        android:ems="6"
        android:id="@+id/Ed"
        android:layout_alignTop="@+id/Buenos"
        android:layout_toRightOf="@+id/muestraDatos" />

    <TextView
        android:text="Ingresa tu Edad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/edad"
        android:layout_above="@+id/Ed"
        android:layout_toRightOf="@+id/muestraDatos" />

    <TextView
        android:text="¿Qué te parecen nuestros servicios?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_above="@+id/Email"
        android:layout_alignLeft="@+id/Buenos" />

    <TextView
        android:text="Ingresa tu correo eléctronico:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/correo"
        android:layout_above="@+id/Email"
        android:layout_alignParentRight="true"
        android:layout_marginRight="56dp" />

</RelativeLayout>
