<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/Servicio"
        android:layout_above="@+id/hacerOtraReservacion"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="¿Qué te parecen nuestros servicios?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Serv"
        android:layout_above="@+id/hacerOtraReservacion"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="59dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/Disfrutar"
        android:layout_above="@+id/Serv"
        android:layout_alignRight="@+id/Serv" />

    <TextView
        android:text="¿Haz disfrutado de nuestros servicios?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Person"
        android:layout_above="@+id/Disfrutar"
        android:layout_alignLeft="@+id/Disfrutar" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/Email"
        android:layout_above="@+id/Person"
        android:layout_alignLeft="@+id/Person" />

    <TextView
        android:text="Ingresa tu email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mail"
        android:layout_above="@+id/Email"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/Edad"
        android:layout_above="@+id/mail"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="Ingresa tu edad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Ed"
        android:layout_above="@+id/Edad"
        android:layout_alignRight="@+id/mail" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/Telefono"
        android:layout_above="@+id/Ed"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text="Ingresa tu télefono:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Cel"
        android:layout_above="@+id/Telefono"
        android:layout_alignParentLeft="true" />

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Email"
        android:layout_marginTop="21dp"
        android:id="@+id/muestraDatos" />



    <Button
        android:id="@+id/hacerOtraReservacion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:onClick="hacerOtraReserva(Actividad2)"
        android:text="Hacer Otra Reservacion"
        android:layout_marginBottom="19dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true" />


</RelativeLayout>
